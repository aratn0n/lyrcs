<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="16dp">

    <TextView
            android:text="Song Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/songTitleTextView"
            android:gravity="center_horizontal" android:textSize="24sp"/>
    <TextView
            android:text="Artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/artistTextView"
            android:gravity="center_horizontal" android:textSize="24sp" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/lyricsTextView"
            android:gravity="center_horizontal" android:textSize="24sp" android:layout_marginTop="16dp"/>
</LinearLayout>