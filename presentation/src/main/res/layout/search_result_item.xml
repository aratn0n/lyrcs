<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp">

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/trackNameTextView" android:textSize="16sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/artistNameTextView" android:layout_marginTop="8dp"
                android:textSize="16sp"/>
    </LinearLayout>
</layout>
